<div id="login_modal" class="modal-background">
  <div class="modal model-item">
    Log in to enable editting<br/>
    <form class="model-item" id="login-form" >
        <input type="text" placeholder="Username" class="model-item login-textbox" id="username-input" name="username" />
        <input type="password" placeholder="Password" class="model-item login-textbox" id="password-input" name="password" />
        <p id="error-message"></p>
        <input type="submit" id="login_button" class="model-item modal-button" value="Login" />
    </form>
  </div>
</div>

<div id="logout_modal" class="modal-background">
  <div class="modal model-item">
    <% if (login.logged_in) { %>
      <h2>Logged in as <em><%= login.user.username %></em></h2>
    <% } else { %>
      <p>Not logged in</p>
    <% } %>
    <p>Edit Mode Enabled</p>
    <input type="button" id="logout_button" class="model-item modal-button" value="Log out" />
  </div>
</div>
